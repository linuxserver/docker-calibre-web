#!/usr/bin/with-contenv bash

# put database in /config
[[ ! -e /config/app.db ]] && \
	cp /defaults/app.db /config/app.db \

# link to /app/calibre-web/app.db
ln -s /config/app.db /app/calibre-web/app.db

#install kindlegen if present
[[ -e /config/kindlegen ]] && \
       cp /config/kindlegen /app/calibre-web/vendor/
       chmod +x /app/calibre-web/vendor/kindlegen

# permissions
chown -R abc:abc \
	/config \
        /app/calibre-web
